<h2>Create your account now!</h2>

<div class="container">
    <form id="signup-form">
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text"></div>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password">
        </div>

        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <textarea class="form-control" id="username" rows="1"></textarea>
        </div>

        <button id="signup-btn" type="submit" class="btn btn-primary">Submit</button>
        <div id="abc" style="background-color:red;width:76px;text-align:center;margin-top:2px;">Hi!</div>
    </form>
</div>


<script type="text/javascript" src="/assets/js/signup.js"></script>