<h1>Bello, <span id="username">{{userProfile.username}}</span>!</h1>

{{#if userProfile.avatarURL}}<img src="{{userProfile.avatarURL}}"><br>{{/if}}

<h2>Personal Statement</h2>
<div class="container">
    <p>{{userProfile.personalStatement}}</p>
</div>

<h2>Your faborite hobbies!</h2>
<ul class="hobby-list">
    {{#if userProfile.hobby1id}}<li>{{userProfile.hobby1id}}</li>{{/if}}
    {{#if userProfile.hobby2id}}<li>{{userProfile.hobby2id}}</li>{{/if}}
    {{#if userProfile.hobby3id}}<li>{{userProfile.hobby3id}}</li>{{/if}}
</ul>

<div class="container mb-3">
    <button class="btn btn-primary" id="updateProfile" >Update Profile</button>
    <button class="btn btn-primary" id="viewMessagesButton">View Your Messages</button>
</div>



{{! List of Minion connections for user}}
<h3>Check out your Minion connections!</h3>

<ul class="connections-list">
    {{#each minionConnections}}
        <li>{{username}}</li>
        <ul>Enjoys:
            {{#if hobby1id}}<li>{{hobby1id}}</li>{{/if}}
            {{#if hobby2id}}<li>{{hobby2id}}</li>{{/if}}
            {{#if hobby3id}}<li>{{hobby3id}}</li>{{/if}}
        </ul>
        <button class="btn btn-primary messageUserButton" value="{{username}}">Message {{username}}!</button>
    {{/each}}
</ul>

<div>
    <form id="login-form" class='form-style'>
        <button id="logout-button" type="submit" class="btn btn-minion">ðŸ’– Log out!</button>
    </form>
</div>

