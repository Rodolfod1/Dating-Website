<h1>Bello, {{userProfile.username}}!</h1>

<h2>{{userProfile.personalStatement}}</h2>

<ul class="hobby-list"> Your faborite hobbies!
    {{#if userProfile.hobby1id}}<li>{{userProfile.hobby1id}}</li>{{/if}}
    {{#if userProfile.hobby2id}}<li>{{userProfile.hobby2id}}</li>{{/if}}
    {{#if userProfile.hobby3id}}<li>{{userProfile.hobby3id}}</li>{{/if}}
</ul>

{{! List of Minion connections for user}}
<h3>Check out your Minion connections!</h3>

<ul class="connections-list">
    {{#each minionConnections}}
        <li>{{username}}</li>
        <ul>Enjoys:
            {{#if hobby1id}}<li>{{hobby1id}}</li>{{/if}}
            {{#if hobby2id}}<li>{{hobby2id}}</li>{{/if}}
            {{#if hobby3id}}<li>{{hobby3id}}</li>{{/if}}
        </ul>
    {{/each}}
</ul>